@prefix : <http://example.org/ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

#################################################################
# Classes
#################################################################

:Department rdf:type owl:Class .

:Project rdf:type owl:Class .

:Employee rdf:type owl:Class .

:TechnicalEmployee rdf:type owl:Class ;
    rdfs:subClassOf :Employee .

:AdministrativeEmployee rdf:type owl:Class ;
    rdfs:subClassOf :Employee .

:Manager rdf:type owl:Class ;
    rdfs:subClassOf :Employee .

:Task rdf:type owl:Class .

:Assignment rdf:type owl:Class .

#################################################################
# Object Properties
#################################################################

:hasManager rdf:type owl:ObjectProperty ;
    rdfs:domain :Department ;
    rdfs:range :Manager .

:belongsToDepartment rdf:type owl:ObjectProperty ;
    rdfs:domain :Project , :Employee ;
    rdfs:range :Department .

:managesDepartment rdf:type owl:ObjectProperty ;
    rdfs:domain :Manager ;
    rdfs:range :Department ;
    owl:inverseOf :hasManager .

:worksOnProject rdf:type owl:ObjectProperty ;
    rdfs:domain :Employee ;
    rdfs:range :Project .

:hasTask rdf:type owl:ObjectProperty ;
    rdfs:domain :Project ;
    rdfs:range :Task .

:isAssignedToTask rdf:type owl:ObjectProperty ;
    rdfs:domain :Employee ;
    rdfs:range :Task .

:assignedTo rdf:type owl:ObjectProperty ;
    rdfs:domain :Assignment ;
    rdfs:range :Employee .

:assignmentOfProject rdf:type owl:ObjectProperty ;
    rdfs:domain :Assignment ;
    rdfs:range :Project .

:assignmentOfTask rdf:type owl:ObjectProperty ;
    rdfs:domain :Assignment ;
    rdfs:range :Task .

:hasSpouse rdf:type owl:ObjectProperty ;
    rdfs:domain :Employee ;
    rdfs:range :Employee ;
    owl:inverseOf :hasSpouse ;
    a owl:SymmetricProperty .

#################################################################
# Data Properties
#################################################################

:departmentName rdf:type owl:DatatypeProperty ;
    rdfs:domain :Department ;
    rdfs:range xsd:string .

:departmentBudget rdf:type owl:DatatypeProperty ;
    rdfs:domain :Department ;
    rdfs:range xsd:decimal .

:projectName rdf:type owl:DatatypeProperty ;
    rdfs:domain :Project ;
    rdfs:range xsd:string .

:projectBudget rdf:type owl:DatatypeProperty ;
    rdfs:domain :Project ;
    rdfs:range xsd:decimal .

:firstName rdf:type owl:DatatypeProperty ;
    rdfs:domain :Employee ;
    rdfs:range xsd:string .

:lastName rdf:type owl:DatatypeProperty ;
    rdfs:domain :Employee ;
    rdfs:range xsd:string .

:specialty rdf:type owl:DatatypeProperty ;
    rdfs:domain :TechnicalEmployee ;
    rdfs:range xsd:string .

:hoursWorked rdf:type owl:DatatypeProperty ;
    rdfs:domain :AdministrativeEmployee ;
    rdfs:range xsd:integer .

:yearsOfService rdf:type owl:DatatypeProperty ;
    rdfs:domain :Manager ;
    rdfs:range xsd:integer .

:taskDescription rdf:type owl:DatatypeProperty ;
    rdfs:domain :Task ;
    rdfs:range xsd:string .

:startDate rdf:type owl:DatatypeProperty ;
    rdfs:domain :Assignment ;
    rdfs:range xsd:date .

#################################################################
# Restrictions
#################################################################

:TechnicalEmployee rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :specialty ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] .

:AdministrativeEmployee rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :hoursWorked ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] .

:Manager rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :yearsOfService ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] .

:Assignment rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :assignedTo ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] , [
    rdf:type owl:Restriction ;
    owl:onProperty :assignmentOfProject ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] , [
    rdf:type owl:Restriction ;
    owl:onProperty :assignmentOfTask ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] , [
    rdf:type owl:Restriction ;
    owl:onProperty :startDate ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] .
