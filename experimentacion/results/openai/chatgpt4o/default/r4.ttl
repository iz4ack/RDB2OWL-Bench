@prefix : <http://example.org/ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

##############################################
# Ontology Metadata
##############################################

<http://example.org/ontology> a owl:Ontology .

##############################################
# Classes
##############################################

:Person a owl:Class .

:Employee a owl:Class ;
    rdfs:subClassOf :Person .

:Consultant a owl:Class ;
    rdfs:subClassOf :Person .

:Company a owl:Class .

:Location a owl:Class .

##############################################
# Object Properties
##############################################

:mentors a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    owl:inverseOf :isMentoredBy .

:isMentoredBy a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Person .

:worksWith a owl:ObjectProperty ;
    rdfs:domain :Person ;
    rdfs:range :Company ;
    owl:inverseOf :hasWorker .

:hasWorker a owl:ObjectProperty ;
    rdfs:domain :Company ;
    rdfs:range :Person .

:hasLocation a owl:ObjectProperty ;
    rdfs:domain :Company ;
    rdfs:range :Location ;
    owl:inverseOf :isLocationOf .

:isLocationOf a owl:ObjectProperty ;
    rdfs:domain :Location ;
    rdfs:range :Company .

##############################################
# Datatype Properties
##############################################

:hasNIF a owl:DatatypeProperty ;
    rdfs:domain :Person ;
    rdfs:range xsd:integer ;
    owl:cardinality "1"^^xsd:nonNegativeInteger .

:email a owl:DatatypeProperty ;
    rdfs:domain :Person ;
    rdfs:range xsd:string .

:firstName a owl:DatatypeProperty ;
    rdfs:domain :Person ;
    rdfs:range xsd:string .

:employeeId a owl:DatatypeProperty ;
    rdfs:domain :Employee ;
    rdfs:range xsd:integer ;
    owl:cardinality "1"^^xsd:nonNegativeInteger .

:salary a owl:DatatypeProperty ;
    rdfs:domain :Employee ;
    rdfs:range xsd:decimal .

:consultantId a owl:DatatypeProperty ;
    rdfs:domain :Consultant ;
    rdfs:range xsd:integer ;
    owl:cardinality "1"^^xsd:nonNegativeInteger .

:hourlyRate a owl:DatatypeProperty ;
    rdfs:domain :Consultant ;
    rdfs:range xsd:decimal .

:companyNIF a owl:DatatypeProperty ;
    rdfs:domain :Company ;
    rdfs:range xsd:string ;
    owl:cardinality "1"^^xsd:nonNegativeInteger .

:companyName a owl:DatatypeProperty ;
    rdfs:domain :Company ;
    rdfs:range xsd:string .

:locationId a owl:DatatypeProperty ;
    rdfs:domain :Location ;
    rdfs:range xsd:integer ;
    owl:cardinality "1"^^xsd:nonNegativeInteger .

:street a owl:DatatypeProperty ;
    rdfs:domain :Location ;
    rdfs:range xsd:string .

:city a owl:DatatypeProperty ;
    rdfs:domain :Location ;
    rdfs:range xsd:string .

:province a owl:DatatypeProperty ;
    rdfs:domain :Location ;
    rdfs:range xsd:string .

:coordinates a owl:DatatypeProperty ;
    rdfs:domain :Location ;
    rdfs:range xsd:string .

##############################################
# Restrictions
##############################################

:Person a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [ a owl:Restriction ; owl:onProperty :hasNIF ; owl:cardinality "1"^^xsd:nonNegativeInteger ]
            [ a owl:Restriction ; owl:onProperty :email ; owl:maxCardinality "1"^^xsd:nonNegativeInteger ]
            [ a owl:Restriction ; owl:onProperty :firstName ; owl:allValuesFrom xsd:string ]
        )
    ] .

:Employee a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            :Person
            [ a owl:Restriction ; owl:onProperty :employeeId ; owl:cardinality "1"^^xsd:nonNegativeInteger ]
            [ a owl:Restriction ; owl:onProperty :salary ; owl:allValuesFrom xsd:decimal ]
        )
    ] .

:Consultant a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            :Person
            [ a owl:Restriction ; owl:onProperty :consultantId ; owl:cardinality "1"^^xsd:nonNegativeInteger ]
            [ a owl:Restriction ; owl:onProperty :hourlyRate ; owl:allValuesFrom xsd:decimal ]
        )
    ] .

:Company a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [ a owl:Restriction ; owl:onProperty :companyNIF ; owl:cardinality "1"^^xsd:nonNegativeInteger ]
            [ a owl:Restriction ; owl:onProperty :companyName ; owl:allValuesFrom xsd:string ]
        )
    ] .

:Location a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [ a owl:Restriction ; owl:onProperty :locationId ; owl:cardinality "1"^^xsd:nonNegativeInteger ]
            [ a owl:Restriction ; owl:onProperty :street ; owl:allValuesFrom xsd:string ]
            [ a owl:Restriction ; owl:onProperty :city ; owl:allValuesFrom xsd:string ]
            [ a owl:Restriction ; owl:onProperty :province ; owl:allValuesFrom xsd:string ]
            [ a owl:Restriction ; owl:onProperty :coordinates ; owl:allValuesFrom xsd:string ]
        )
    ] .
