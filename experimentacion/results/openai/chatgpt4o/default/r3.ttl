@prefix : <http://example.org/ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

#################################################################
# Ontology Declaration
#################################################################

<http://example.org/ontology> rdf:type owl:Ontology .

#################################################################
# Classes
#################################################################

:Territory rdf:type owl:Class .

:Country rdf:type owl:Class ;
    rdfs:subClassOf :Territory .

:Region rdf:type owl:Class ;
    rdfs:subClassOf :Territory .

:Province rdf:type owl:Class ;
    rdfs:subClassOf :Territory .

:Locality rdf:type owl:Class ;
    rdfs:subClassOf :Territory .

#################################################################
# Object Properties
#################################################################

:partOf rdf:type owl:ObjectProperty ;
    rdfs:domain :Territory ;
    rdfs:range :Territory ;
    rdf:type owl:TransitiveProperty ;
    owl:propertyDisjointWith :hasPart ;
    owl:inverseOf :hasPart .

:hasPart rdf:type owl:ObjectProperty ;
    rdfs:domain :Territory ;
    rdfs:range :Territory ;
    rdf:type owl:TransitiveProperty .

:bordersWith rdf:type owl:ObjectProperty ;
    rdfs:domain :Territory ;
    rdfs:range :Territory ;
    a owl:SymmetricProperty ;
    a owl:IrreflexiveProperty .

#################################################################
# Data Properties
#################################################################

:territoryName rdf:type owl:DatatypeProperty ;
    rdfs:domain :Territory ;
    rdfs:range xsd:string .

:territoryType rdf:type owl:DatatypeProperty ;
    rdfs:domain :Territory ;
    rdfs:range xsd:string ;
    owl:oneOf ( "country" "region" "province" "locality" ) .

#################################################################
# Restrictions and Axioms
#################################################################

:Territory rdf:type owl:Class ;
    owl:disjointUnionOf ( :Country :Region :Province :Locality ) .

# Territory must have exactly one name
:Territory rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :territoryName ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] .

# Territory must have exactly one type
:Territory rdfs:subClassOf [
    rdf:type owl:Restriction ;
    owl:onProperty :territoryType ;
    owl:cardinality "1"^^xsd:nonNegativeInteger
] .

# No self-reference in partOf
:Territory rdfs:subClassOf [
    rdf:type owl:Class ;
    owl:complementOf [
        rdf:type owl:Restriction ;
        owl:onProperty :partOf ;
        owl:hasSelf true
    ]
] .

# No self-reference in bordersWith
:Territory rdfs:subClassOf [
    rdf:type owl:Class ;
    owl:complementOf [
        rdf:type owl:Restriction ;
        owl:onProperty :bordersWith ;
        owl:hasSelf true
    ]
] .
