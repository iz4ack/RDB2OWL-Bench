@prefix : <http://example.org/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

#################################################################
# Ontology
#################################################################
:TerritoryOntology a owl:Ontology ;
    rdfs:label "Territory Ontology" ;
    rdfs:comment "Resource 3. Model demonstrating part-whole relationships, 1..1 self-relation, literals with enumeration constraints, transitive, inverse, and irreflexive properties." .

#################################################################
# Class
#################################################################
:Territory a owl:Class ;
    rdfs:label "Territory" ;
    rdfs:comment "A territorial unit that can contain other territories." .

#################################################################
# Datatype Properties
#################################################################
:hasTerritoryName a owl:DatatypeProperty ;
    rdfs:domain :Territory ;
    rdfs:range xsd:string ;
    rdfs:label "name" ;
    rdfs:comment "Name of the territory." .

:territoryType a rdfs:Datatype ; 
  owl:oneOf ( 
    "country"^^xsd:string 
    "region"^^xsd:string 
    "province"^^xsd:string 
    "locality"^^xsd:string
  ) .

:hasTerritoryType a owl:DatatypeProperty ;
    rdfs:domain :Territory ;
    rdfs:range :territoryType ;
    rdfs:label "type" ;
    rdfs:comment "Type of the territory." .

#################################################################
# Object Properties
#################################################################
:isPartOf a owl:ObjectProperty, owl:IrreflexiveProperty, owl:TransitiveProperty;
    rdfs:domain :Territory ;
    rdfs:range :Territory ;
    rdfs:label "is part of" ;
    rdfs:comment "Indicates that one territory is part of another." .
:hasPart owl:inverseOf :isPartOf .
:bordersWith a owl:ObjectProperty, owl:IrreflexiveProperty, owl:SymmetricProperty ;
    rdfs:domain :Territory ;
    rdfs:range :Territory ;
    rdfs:label "borders with" ;
    rdfs:comment "Indicates that a territory borders another." .
